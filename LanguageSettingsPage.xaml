<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageWithGames.LanguageSettingsPage"
             Title="Настройки языка">
    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">

        <Label Text="Текущий язык: RU" x:Name="CurrentLanguageLabel"
               FontSize="20" HorizontalOptions="Center" />

        <Button Text="Переключить на EN"
                x:Name="LanguageButton"
                Clicked="OnLanguageButtonClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10" />

        <Label Text="Чтобы изменения вступили в силу, может потребоваться перезапуск приложения."
               FontSize="12" HorizontalOptions="Center" Margin="0, 20, 0, 0"/>

    </VerticalStackLayout>
</ContentPage>